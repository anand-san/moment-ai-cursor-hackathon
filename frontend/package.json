{
  "name": "@sandilya-stack/frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite build",
    "lint": "eslint src/**/*.{ts,tsx} --report-unused-disable-directives",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "bun run lint && bun run prettier",
    "preview": "bunx --bun vite preview",
    "check-types": "tsc --noemit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cap:sync": "cap sync android",
    "cap:open": "cap open android",
    "cap:run": "cap run android",
    "android": "bun run build && cap sync android && cap run android"
  },
  "dependencies": {
    "@capacitor-community/speech-recognition": "^7.0.1",
    "@capacitor-firebase/authentication": "^8.0.1",
    "@capacitor/android": "^8.0.2",
    "@capacitor/app": "^8.0.0",
    "@capacitor/core": "^8.0.2",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@sentry/react": "^10.5.0",
    "@tailwindcss/postcss": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^10.14.1",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.539.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.2",
    "react-router-dom": "^7.4.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.2",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.0.0",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.6",
    "vite": "^7.1.1",
    "vitest": "^4.0.17"
  }
